{
    "compilerOptions": {
        "outDir": "build",
        "module": "es6",
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "declaration": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules",
        "build",
        "bower_components",
        "jspm_packages",
        "tests"
    ]
}