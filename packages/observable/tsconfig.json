{
    "compilerOptions": {
        "module": "umd",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "es2015"
        ],
        "allowJs": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "jsx": "react",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "tests",
        "bundle"
    ]
}