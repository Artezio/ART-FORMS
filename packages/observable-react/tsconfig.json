{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es5",
            "es6",
            "dom",
            "es2015"
        ],
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "jsx": "react",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "tests",
        "build",
        "bundle"
    ]
}