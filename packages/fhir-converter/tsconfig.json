{
  "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "lib": [
          "es6",
          "dom",
          "es2015"
      ],
      "allowJs": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "isolatedModules": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
  },
  "exclude": [
      "tests",
      "dist",
      "build"
  ]
}